---
import { Image } from 'astro:assets'
const {picture,name,id} = Astro.props
---

<a href={`/${id}`}>
    <Image src={picture} alt={"profile photo"}/>
    <span>{name}</span>
</a>

<style>
    a{
		text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
	}
    a:hover{
        position: relative;
        transform: translateY(-5px);
        transition:  all ease-in-out 300ms;       
    }
	a:visited{
		color: unset;
	}    
    img{
        display: block;
        border-radius: 100%;
        width: 80px;
        height: 80px;
        margin-bottom: 0.6rem;
        object-fit: cover;
    }
    span{
        display: block;
        font-size: 1.2rem;
        font-weight: bold;
		color: rgb(3 55 149);
    }
</style>

